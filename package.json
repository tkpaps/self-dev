{
  "name": "self-dev",
  "version": "1.0.0",
  "description": "A platform for more than just coding.",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"ts-node backend/server.ts\" \"npm run start-frontend\"",
    "start-frontend": "react-scripts start",
    "start-backend": "node dist/server.js",
    "dev": "NODE_ENV=development concurrently \"nodemon --watch server ./backend/server.ts\" \"webpack serve --open\"",
    "build-server": "tsc -p tsconfig.server.json",
    "build-frontend": "NODE_ENV=production webpack",
    "build": "npm run build-server && npm run build-frontend",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkpaps/self-dev.git"
  },
  "author": "tkpaps",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tkpaps/self-dev/issues"
  },
  "homepage": "https://github.com/tkpaps/self-dev#readme",
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.1",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "file-loader": "^6.2.0",
    "framer-motion": "^11.0.3",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "terser-webpack-plugin": "^5.3.10",
    "ts-node": "^10.9.2"
  }
}
